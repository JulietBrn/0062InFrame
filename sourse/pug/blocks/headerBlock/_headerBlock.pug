mixin headerBlock()
	// start headerBlock
	+b.headerBlock.section#headerBlock&attributes(attributes)
		.container
			+e.row
				+e.col.col-lg-8
					+b.section-title
						.h1.fw-700 Government Prize "In the frame"
						+e.sub HR premium for the public sector
					+e.content 
						//- +e.apply.text-large.order-lg-2 #[span Acceptance of applications until July 11]
						.text-large.order-lg-3.span Award ceremony - October 2, 2025
						+e.btn.btn.btn-primary(href='#') Apply
				+e.col.col-lg-4
		video(autoplay, muted, loop, playsinline, poster="img/effectsResult.jpg").section-img-bg.d-none.d-lg-block
			source(src="img/oblojka.mp4", type="video/mp4")
			source(src="img/oblojka.webm", type="video/webm")
		+e.img-wrap-mob.d-lg-none.ms-auto
			.bg-gr
			+img(src="img/headerBlock-bg-mob.png", alt="")
		+b.wrap-btn-apply.vertical-move.btn-wr--js.d-xl-none: .container: a.btn.btn-primary(href='#') Apply
	+b.question-wrap.vertical-move.fw-700.btn-wr--js.link-modal-js(href='#modal-question') ?
	// end headerBlock