				+e.badge-wrap.text-end: +icon('download')

mixin legendItem(p)
	+b.legend-item 
		block 
		+e.text.small.text-secondary.order-last= p


mixin applyCard(p, t, btn, grad)
	+e.col.col-md-6.col-xl-4
		+b.apply-card
			+e.wrap
				+e.top.row-between
					block
				+e.content
					.small=p
					+e.title.h5=t
			+e.bottom.row-between
				+e.date.text-secondary.small 11.10.2024
				if grad 
					+e.btn.btn.btn-sm.small(href='#' download)&attributes(attributes)
						span=btn
				else if btn 
					+e.btn.btn.btn-sm.small(href='#' download)&attributes(attributes)=btn

